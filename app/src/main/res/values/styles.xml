<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#25AE5E</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@null</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- AppCompatEditText默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">#25AE5E</item>
    </style>

    <style name="AppTheme_NO" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#25AE5E</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- AppCompatEditText默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">#25AE5E</item>
    </style>

    <style name="NotitleFullTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appTextBlue</item>
        <item name="colorPrimaryDark">@color/appTextBlue</item>
        <item name="colorAccent">@color/appTextBlue</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/welcome_background</item>

    </style>

    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!--demo-->
    <style name="Animation.CustomPopup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="check_box">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector</item>
    </style>

    <style name="check_table_name">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/check_table_name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="check_item_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/check_item_name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="check_item_result">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/bg_check_item_result_unselect</item>
        <item name="android:textColor">@color/check_item_select_text</item>
        <item name="android:gravity">center</item>

        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="button_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_style_2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>

    </style>

    <style name="object_details_value">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#696969</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="object_details_key">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#A9A9A9</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_content_layout">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="text_input_layout">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="text_input_layout_inner">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">7</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="text_input_key">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_input_key</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="text_input_value_tv_1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_input_value</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">7</item>
    </style>

    <style name="text_input_value_tv">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_input_value</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="text_input_value_edt">
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/text_input_value</item>
        <item name="android:textColor">@color/text_input_value</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_weight">7</item>
    </style>

    <style name="text_title_bold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_title_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_title_2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_title_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_key">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_input_value</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="text_value">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_input_key</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_weight">7</item>
    </style>


    <!-- 个人中心的样式-->
    <style name="personal_center_layout">
        <item name="android:padding">15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="personal_center_image">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
    </style>

    <style name="personal_center_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_input_key</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="line_divider">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_divider</item>
    </style>

    <!--个人信息-->
    <style name="personal_info_layout">
        <item name="android:padding">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="text_personal_info">
        <item name="android:textStyle">normal</item>
        <!--<item name="android:layout_marginLeft">10dp</item>-->
        <!--<item name="android:layout_margin">10dp</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_ff666666</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="edt_personal_info">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_ff333333</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">@null</item>
    </style>

    <style name="myNavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
